{
	"manifest_version": 2,
	"name": "Spiky Snorkel",
	"version": "1.0",
	"description": "Enhancements for Salesforce",
	"permissions": [
		"tabs",
		"https://code.jquery.com/jquery-2.1.1.min.js"
	],
	"content_scripts": [{
		"matches": ["https://*.salesforce.com/*", "https://*.force.com/*"],
		"js": ["jquery-2.1.1.min.js", "contentScript.js"],
		"run_at": "document_end"
		// "run_at": "document_start"
		// "run_at": "document_idle"
	}],
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}
}